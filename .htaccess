#         Order allow,deny
#         Allow from all
#     </FilesMatch>
# </Directory>

# =============================================
# ADDITIONAL OPTIMIZATIONS
# =============================================

# Remove ETags for better caching
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# Disable server signature
ServerTokens Prod
ServerSignature Off

# ===== END OF HTACCESS ===== 